<%= link_to 'Back', project_phases_path %> 
<h1>Project Phase Activities</h1>

<table class="table">
  <thead>
    <tr>
      <th class="">ID </th>
      <th class="">Activity</th>
      <th class="">Description</th>
      <th class="">Start date</th>
      <th class="">End date</th>
      <th class="">Phase ID</th>
      <th class="">Phase</th>
      <th class="">Project</th>
      <th colspan="9"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_phase_activities.each do |project_phase_activity| %>
      <tr>
        <td class=""><%= project_phase_activity.id %></td>
        <td class=""><%= project_phase_activity.name %></td>
        <td class=""><%= project_phase_activity.description %></td>
        <td class=""><%= project_phase_activity.start_date %></td>
        <td class=""><%= project_phase_activity.end_date %></td>
        <td class=""><%= project_phase_activity.project_phases_id %></td>
        <td class=""><%= project_phase_activity.project_phase.name %></td>
        <td class=""><%= project_phase_activity.project_phase.project.name %></td>
        <td><%= link_to 'Show', project_phase_activity_url(:id => project_phase_activity.id) %></td>
        <% if can? :manage, project_phase_activity %>
            <td><%= link_to 'Edit', edit_project_phase_activity_path(:id => project_phase_activity.id) %></td>
            <td><%= link_to 'Destroy', project_phase_activity_path(project_phase_activity.project_phase, :id => project_phase_activity.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :manage, Project::Phase::Activity%>
<%= link_to 'Add new activity to a phase', new_project_phase_activity_path %>

<% end %>

